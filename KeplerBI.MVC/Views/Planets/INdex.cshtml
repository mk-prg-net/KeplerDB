
@model mko.BI.Repositories.Interfaces.IFilteredSortedSet<KeplerBI.NaturalCelesticalBodies.IPlanet>
@{
    ViewBag.Title = "Planeten";
}

<h2>Katalog der Planeten</h2>

<div class="btn-toolbar">
    <div class="btn-group">
        <a class="btn btn-default" href="@Url.Action("Index", new{rpn="desc OrderByMass"})">Massen <span class="glyphicon glyphicon-arrow-down"></span> </a>
        <a class="btn btn-default" href="@Url.Action("Index", new{rpn="asc OrderByMass"})"><span class="glyphicon glyphicon-arrow-up"></span> </a>
    </div>

    <div class="btn-group">
        <a class="btn btn-default" href="@Url.Action("Index", new { rpn = "desc OrderBySemiMajorAxisLength" })">Abstände <span class="glyphicon glyphicon-arrow-down"></span> </a>
        <a class="btn btn-default" href="@Url.Action("Index", new { rpn = "asc OrderBySemiMajorAxisLength" })"><span class="glyphicon glyphicon-arrow-up"></span> </a>
    </div>
</div>
<table class="table table-striped">

    <tr>
        <th>Name</th>
        <th>Abstand ZK</th>
        <th>Masse in EM</th>
        <th># Monde</th>
    </tr>

    @foreach (var planet in Model.Get())
    {
        <tr>
            <td>
                @planet.Name
            </td>
            <td>
                @mko.Newton.Length.AU(planet.Orbit.SemiMajorAxis).Vector[0]
            </td>
            <td>
                @if (@planet.MassInEarthmasses >= 1.0)
                {
                    @planet.MassInEarthmasses.ToString("N0")
                }
                else
                {
                    @planet.MassInEarthmasses.ToString("N4");    
                }                
            </td>           
            <td>
                ?
            </td>
        </tr>
    }

</table>
